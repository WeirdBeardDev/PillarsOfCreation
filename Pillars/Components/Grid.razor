@typeparam TItem

<table border="1">
    <thead>
        <tr>@Header</tr>
    </thead>
    <tbody>
        @foreach (var item in Items)
        {
            <tr>@Row(item)</tr>
        }
    </tbody>
    <tfoot>
        <tr>@Footer</tr>
    </tfoot>
</table>

@code {
    [Parameter] public RenderFragment Header { get; set; } = default!;
    [Parameter] public RenderFragment<TItem> Row { get; set; } = default!;
    [Parameter] public RenderFragment Footer { get; set; } = default!;
    [Parameter] public IReadOnlyList<TItem> Items { get; set; } = default!;
}
