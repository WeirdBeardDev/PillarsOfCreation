@page "/choosecharacter"
@inject ILogger<CharacterSelector> _logger
@inject IGameService _game

<PageTitle>Choose Character</PageTitle>

<h1 class="text-center">Character Selection</h1>

<div class="container row">
    <div class="col-sm-6 mb-3 mb-sm-0">
        <CharacterSelector SlotNumber=1 Character=@_characters[0]></CharacterSelector>
    </div>
    <div class="col-sm-6 mb-3 mb-sm-0">
        <CharacterSelector SlotNumber=2 Character=@_characters[1]></CharacterSelector>
    </div>
    <div class="col-sm-6 mb-3 mb-sm-0">
        <CharacterSelector SlotNumber=3 Character=@_characters[2]></CharacterSelector>
    </div>
    <div class="col-sm-6 mb-3 mb-sm-0">
        <CharacterSelector SlotNumber=4 Character=@_characters[3]></CharacterSelector>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        _logger.LogInformation("ChooseCharacter Page Initialized");
        base.OnInitialized();
        _characters = _game.Player.Player.Characters;
    }

    private List<PlayerCharacter> _characters = new();
}
